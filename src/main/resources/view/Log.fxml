<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.LogController"
            prefWidth="848" prefHeight="587" style="-fx-background-color: #4b5c80;">

    <VBox layoutX="30" layoutY="30" spacing="20">
        <Label text="SİSTEM LOG KAYITLARI" textFill="white" style="-fx-font-size: 24; -fx-font-weight: bold;" />

        <TableView fx:id="logTable" prefWidth="780" prefHeight="450">
            <columns>
                <TableColumn fx:id="colDate" text="Tarih" prefWidth="200" />
                <TableColumn fx:id="colLevel" text="Seviye" prefWidth="100" />
                <TableColumn fx:id="colMessage" text="Mesaj" prefWidth="480" />
            </columns>
        </TableView>

        <Button fx:id="clearButton" text="Tüm Logları Temizle" prefWidth="200" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 15;" />
    </VBox>
</AnchorPane>
