<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.MainController"
            prefWidth="1048" prefHeight="587" style="-fx-background-color: #4b5c80;">

    <!-- Sağ Menü -->
    <right>
        <VBox spacing="20" style="-fx-background-color: #3b4b70; -fx-padding: 20;" prefWidth="200">
            <Button fx:id="calculationButton" text="Hesaplama" prefWidth="160" style="-fx-background-radius: 15; -fx-background-color: #8894b2; -fx-text-fill: white;" />
            <Button fx:id="reportButton" text="Raporlar" prefWidth="160" style="-fx-background-radius: 15; -fx-background-color: #8894b2; -fx-text-fill: white;" />
            <Button fx:id="priceButton" text="Fiyat Yönetimi" prefWidth="160" style="-fx-background-radius: 15; -fx-background-color: #8894b2; -fx-text-fill: white;" />
            <Button fx:id="userButton" text="Kullanıcı Yönetimi" prefWidth="160" style="-fx-background-radius: 15; -fx-background-color: #8894b2; -fx-text-fill: white;" />
            <Button fx:id="logoutButton" text="Çıkış" prefWidth="160" style="-fx-background-radius: 15; -fx-background-color: #d9534f; -fx-text-fill: white;" />
        </VBox>
    </right>

    <!-- İçerik Alanı -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;" />
    </center>

</BorderPane>
